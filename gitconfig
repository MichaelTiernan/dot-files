[include]
    path = ~/.github

[core]
    pager = less -FRSX
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[apply]
    whitespace = fix    # warn & fix whitespace errors (%trailing wspace)
    #whitespace = nowarn # warn only

